
<div>
  <h1>Add new cocktail</h1>
  <div>
    <div>
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Submit"%>
        <% end %>
        <div>
          <%= link_to "Back", cocktails_path %>
        </div>
    </div>
  </div>
</div>

