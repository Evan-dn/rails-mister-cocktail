<h1>Editing <%= @cocktail.name %></h1>


<!-- Ingredient-->
<div class="container">
  <div>
    <div>
      <div>
        <%= simple_form_for @cocktail do |f| %>
          <p> Be serious on your description doses</p>
          <%= f.input :name %>
          <p>Change your photo </p>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Submit"%>
        <% end %>
      </div>
    </div>
  </div>
</div>




<%= link_to 'Show', @cocktail %> |
